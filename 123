var deptNumber = execution.getVariable("deptNumber");
var requestBody = JSON.stringify({ "data": { "depts": [deptNumber] } });

var response = connector.get("http-connector").createRequest()
  .method("POST")
  .url(URL)
  .header("Content-Type", "application/json")
  .payload(requestBody)
  .execute();

var responseJson = JSON.parse(response.getResponse());
var workplaceCount = responseJson.data.workplace_count;

execution.setVariable("workplaceCount", workplaceCount);
]]></bpmn:script>
